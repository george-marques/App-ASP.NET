@using Learning.App.Extensions
@model IEnumerable<Learning.App.ViewModels.FornecedorDTO>

@{
    ViewData["Title"] = "Fornecedores";
}

<h4 style="padding-top:50px">@ViewData["Title"]</h4>
<hr />
<vc:Summary></vc:Summary>
<p>
    <a class="btn btn-success" asp-action="Create">
        <i class="fa-solid fa-plus"></i> Adicionar
    </a>
</p>
<table class="table table-hover text-center">
    <thead class="bg-dark">
        <tr class="text-white">
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Documento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ativo)
            </th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @this.FormataDocumento(item.TipoFornecedor, item.Documento)
                </td>
                <td>
                    @if (item.Ativo)
                    {
                        <span style="background-color: green; border-radius: 8px; padding: 5px 10px; color: white;">Ativo</span>
                    }
                    else
                    {
                        <span style="background-color: grey; border-radius: 8px; padding: 5px 10px; color: white;">Inativo</span>
                    }
                </td>
                <td class="text-right">
                    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.Id">
                        <i class="fa-solid fa-pencil"></i> Editar
                    </a>

                    <a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id">
                        <i class="fa-solid fa-eye"></i> Detalhes
                    </a>

                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">
                        <i class="fa-solid fa-trash"></i> Excluir
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
