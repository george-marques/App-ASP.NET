@model Learning.App.ViewModels.FornecedorDTO

@{
    ViewData["Title"] = "Novo Fornecedor";
}

<h4 style="padding-top:50px">@ViewData["Title"]</h4>
<hr />

<form asp-action="Create">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-12">
                <div class="card shadow">
                    <div class="card-body">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="card mb-3">
                            <div class="card-body">
                                <h5 class="card-title text-center">Dados pessoais</h5>
                                <div class="form-group">
                                    <label asp-for="Nome" class="control-label" style="font-weight: bold;">Nome</label>
                                    <input asp-for="Nome" class="form-control" />
                                    <span asp-validation-for="Nome" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Documento" class="control-label" style="font-weight: bold;">Documento</label>
                                    <input asp-for="Documento" class="form-control" />
                                    <span asp-validation-for="Documento" class="text-danger"></span>
                                </div><br />
                                <div class="form-group">
                                    <label asp-for="TipoFornecedor" class="control-label" style="font-weight: bold;">Tipo de Fornecedor</label><br />
                                    <div>
                                        <input type="radio" value="1" asp-for="TipoFornecedor" checked /> Pessoa Física<br />
                                        <input type="radio" value="2" asp-for="TipoFornecedor" /> Pessoa Jurídica<br />
                                    </div><br/>
                                </div>
                                <div class="form-group form-check">
                                    <input class="form-check-input" asp-for="Ativo" />
                                    <label class="form-check-label" for="Ativo" style="font-weight: bold;">@Html.DisplayNameFor(model => model.Ativo)</label>
                                </div>
                            </div>
                        </div>
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title text-center">Endereço</h5>
                                <hr />
                                <partial name="_Endereco" />
                            </div>
                        </div>

                        <input type="hidden" asp-for="Produtos" />
                        <br />

                        <div class="form-group">
                            <button type="submit" class="btn btn-success">Salvar</button>
                            <a class="btn btn-dark" asp-action="Index">Voltar</a>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>

</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        SearchPostalCode();
    </script>
}
