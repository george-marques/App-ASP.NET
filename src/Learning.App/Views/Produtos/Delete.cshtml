@model Learning.App.ViewModels.ProdutoDTO

@{
    ViewData["Title"] = "Excluir";
}

<h4 style="padding-top:50px">@ViewData["Title"]</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <img src="~/images/@Model.Imagem" alt="@Model.Imagem" style="width: 300px; height:300px" />
    </div>

    <div class="col-md-6">
        <dl class="row">
            <dl class="row">
                <dt>
                    @Html.DisplayNameFor(model => model.Fornecedor)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Fornecedor.Nome)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Nome)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Nome)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Descricao)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Descricao)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Valor)
                </dt>
                <dd>
                    @Model.Valor.ToString("C")
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Ativo)
                </dt>
                <dd>
                    @if (@Model.Ativo)
                    {
                        <span>Ativo</span>
                    }
                    else
                    {
                        <span>Inativo</span>
                    }
                </dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Excluir" class="btn btn-danger" /> 
                <a class="btn btn-dark" href="javascript:window.history.back()" ;>Voltar</a>
            </form>
    </div>
</div>         