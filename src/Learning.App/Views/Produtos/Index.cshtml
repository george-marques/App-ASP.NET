@model IEnumerable<Learning.App.ViewModels.ProdutoDTO>

@{
    ViewData["Title"] = "Produtos";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a class="btn btn-success" asp-action="Create">
        <i class="fa-solid fa-plus"></i> Adicionar
    </a>

</p>
<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Imagem)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fornecedor.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Valor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ativo)

            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img src="~/images/@item.Imagem" alt="@item.Imagem" style="width: 100px; height:100px" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Fornecedor.Nome)
                </td>
                <td>
                    @item.Valor.ToString("C")
                </td>
                <td>
                    @if (item.Ativo)
                    {
                        <span style="background-color: green; border-radius: 8px; padding: 5px 10px; color: white;">Ativo</span>
                    }
                    else
                    {
                        <span style="background-color: grey; border-radius: 8px; padding: 5px 10px; color: white;">Inativo</span>
                    }
                </td>
               
                <td>
                    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.Id">
                        <i class="fa-solid fa-pencil"></i> Editar
                    </a>

                    <a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id">
                        <i class="fa-solid fa-eye"></i> Detalhes
                    </a>

                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">
                        <i class="fa-solid fa-trash"></i> Excluir
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
